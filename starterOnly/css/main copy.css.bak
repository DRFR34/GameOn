/******* GENERAL  *******/
:root {
  --font-default: "DM Sans", Arial, Helvetica, sans-serif;
  --font-slab: var(--font-default);
  --modal-duration: 0.8s;
}
* {
  margin: 0;
  box-sizing: border-box;
  padding: 0;
  font-family: var(--font-default);
  font-size: 18px;
}


