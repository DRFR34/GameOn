.main-navbar {
    /* float: right; */
    position:relative;
    display:flex;
    justify-content: space-evenly;
} 
.main-navbar a {
  /* float: left; */
  /* display: block; */
  color: #000000;
  text-align: center;
  padding: 12px 12px;
  margin: 5px;
  text-decoration: none;
  font-size: 20px;
  font-family: Roboto, sans-serif;
}

.main-navbar a:hover {
  background-color: #ff0000;
  color: #ffffff;
  border-radius: 15px;
}

.main-navbar a.active {
  background-color: #ff0000;
  color: #ffffff;
  border-radius: 15px;
}

.main-navbar.icon {
  display: none;
}

