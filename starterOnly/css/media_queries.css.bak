/****** MEDIA QUERIES ******/

/***** Ecrans XL >1440px */
@media screen and (min-width: 1441px) {

    .hero-content {
        background: #232323; 
    }

    #mobileSignupBtn {
        display: none;
    }
}

/****** Ultraportables à Desktop */
@media screen and (min-width: 1024px ) and (max-width: 1440px) {
    
    .hero-section {
        box-shadow: 0 2px 7px 2px rgba(0, 0, 0, 0.5);
    }
    .hero-content {
        background: #232323; 
    }
    
    .hero-headline {
        font-size: 48px;
        color: rgb(0, 255, 225);
        overflow: visible;
        
    }



}

